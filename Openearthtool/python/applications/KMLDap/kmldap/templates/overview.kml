<?xml version="1.0" encoding="UTF-8"?>
<kml xmlns="http://www.opengis.net/kml/2.2" xmlns:gx="http://www.google.com/kml/ext/2.2" xmlns:kml="http://www.opengis.net/kml/2.2" xmlns:atom="http://www.w3.org/2005/Atom">
  <Document>
    <name>Transect Overview</name>
    
    <!-- this the style for the upper line -->
    <Style id="sn_ylw-pushpin">
      <LineStyle>
	<color>bdc23f30</color>
	<width>1.4</width>
      </LineStyle>
      <PolyStyle>
	<color>3bb03291</color>
	<outline>0</outline>
      </PolyStyle>
    </Style>
    <Folder>
      <name>Overview</name>
      % for i, id in enumerate(overview.id):
      <Placemark>
	<name>${id}</name>
	<description>
	  <![CDATA[
		   <h2>Transect ${id}</h2>
		   <ul>
		   <li><a href="${h.url(controller='jarkus', action='transect', id=id, format='html', qualified=True)}">${h.url(controller='jarkus', action='transect', id=id, format='html', qualified=True)}</a></li>
		   <li><a href="${h.url(controller='jarkus', action='transect', id=id, format='kml', qualified=True)}">${h.url(controller='jarkus', action='transect', id=id, format='kml', qualified=True)}</a></li>
		   </ul>
		   <h2>Time series</h2>
		   <p><img src="${h.url(controller='jarkus', action='transectplot', id=id, format="png", qualified=True)}" alt="Timeseries of ${id}" width="300px" height="200px"/></p>
		   <p>Download this image as 
		   <a href="${h.url(controller='jarkus', action='transectplot', id=id, format="png", qualified=True)}">png</a>,
		   <a href="${h.url(controller='jarkus', action='transectplot', id=id, format="pdf", qualified=True)}">pdf</a>,
		   <a href="${h.url(controller='jarkus', action='transectplot', id=id, format="svg", qualified=True)}">svg</a>.</p>
		   <p><img src="${h.url(controller='jarkus', action='eeg', id=id, format="png", qualified=True)}" alt="Timeseries of ${id}" width="300px" height="200px" /></p>
		   <p>Download this image as 
		   <a href="${h.url(controller='jarkus', action='eeg', id=id, format="png", qualified=True)}">png</a>,
		   <a href="${h.url(controller='jarkus', action='eeg', id=id, format="pdf", qualified=True)}">pdf</a>,
		   <a href="${h.url(controller='jarkus', action='eeg', id=id, format="svg", qualified=True)}">svg</a>.</p>
		   <p><img src="${h.url(controller='jarkus', action='alphahistory', id=id, format="png", qualified=True)}" alt="Timeseries of ${id}" width="300px" height="200px" /></p>
		   <p>Download this image as 
		   <a href="${h.url(controller='jarkus', action='alphahistory', id=id, format="png", qualified=True)}">png</a>,
		   <a href="${h.url(controller='jarkus', action='alphahistory', id=id, format="pdf", qualified=True)}">pdf</a>,
		   <a href="${h.url(controller='jarkus', action='alphahistory', id=id, format="svg", qualified=True)}">svg</a>.</p>
		   
	  ]]>
	  
	</description>
	
	<styleUrl>#sn_ylw-pushpin</styleUrl>
	<Point>
	  <coordinates>
	    ${h.textcoordinates(overview.lon[i], overview.lat[i])}
	  </coordinates>
	</Point>
	
      </Placemark>
      % endfor
    </Folder>
  </Document>
</kml>
