<?xml version="1.0"?>
<root>
  <element>
    <style>panel</style>
    <text>Observation Points</text>
    <position>40 10 340 160</position>
  </element>
  <element>
    <style>listbox</style>
    <position>50 20 160 130</position>
    <tooltipstring>Select observation point</tooltipstring>
    <textposition>above-center</textposition>
    <variable>handles.model.sfincs.domain.activeobservationpoint</variable>
    <type>integer</type>
    <onchange>ddb_sfincs_observation_points</onchange>
    <option1>selectobservationpointfromlist</option1>
    <listtext>
      <variable>handles.model.sfincs.domain.observationpointnames</variable>
    </listtext>
  </element>
  <element>
    <style>edit</style>
    <position>250 130 120 20</position>
    <text>Name</text>
    <onchange>ddb_sfincs_observation_points</onchange>
    <option1>editobservationpoint</option1>
    <tooltipstring>Edit observation point name</tooltipstring>
    <variable>handles.model.sfincs.domain.observationpoints(handles.model.sfincs.domain.activeobservationpoint).name</variable>
    <type>string</type>
    <dependency>
      <action>enable</action>
      <checkfor>all</checkfor>
      <check>
        <variable>handles.model.sfincs.domain.nrobservationpoints</variable>
        <value>0</value>
        <operator>gt</operator>
      </check>
    </dependency>
    <dependency>
      <action>update</action>
    </dependency>
  </element>
  <element>
    <style>edit</style>
    <position>250 105 50 20</position>
    <text>X</text>
    <onchange>ddb_sfincs_observation_points</onchange>
    <option1>editobservationpoint</option1>
    <tooltipstring>Edit observation point x coordinate</tooltipstring>
    <variable>handles.model.sfincs.domain.observationpoints(handles.model.sfincs.domain.activeobservationpoint).x</variable>
    <type>real</type>
    <dependency>
      <action>enable</action>
      <checkfor>all</checkfor>
      <check>
        <variable>handles.model.sfincs.domain.nrobservationpoints</variable>
        <value>0</value>
        <operator>gt</operator>
      </check>
    </dependency>
    <dependency>
      <action>update</action>
    </dependency>
  </element>
  <element>
    <style>edit</style>
    <position>320 105 50 20</position>
    <text>Y</text>
    <onchange>ddb_sfincs_observation_points</onchange>
    <option1>editobservationpoint</option1>
    <variable>handles.model.sfincs.domain.observationpoints(handles.model.sfincs.domain.activeobservationpoint).y</variable>
    <type>real</type>
    <tooltipstring>Edit observation point y coordinate</tooltipstring>
    <dependency>
      <action>enable</action>
      <checkfor>all</checkfor>
      <check>
        <variable>handles.model.sfincs.domain.nrobservationpoints</variable>
        <value>0</value>
        <operator>gt</operator>
      </check>
    </dependency>
    <dependency>
      <action>update</action>
    </dependency>
  </element>
  <element>
    <style>pushbutton</style>
    <position>220 65 70 20</position>
    <text>Add</text>
    <tooltipstring>Add observation point</tooltipstring>
    <callback>ddb_sfincs_observation_points</callback>
    <option1>addobservationpoint</option1>
  </element>
  <element>
    <style>pushbutton</style>
    <position>300 65 70 20</position>
    <text>Delete</text>
    <tooltipstring>Delete observation point</tooltipstring>
    <callback>ddb_sfincs_observation_points</callback>
    <option1>deleteobservationpoint</option1>
  </element>
  <element>
    <style>pushselectfile</style>
    <position>220 20 70 20</position>
    <tooltipstring>Open observation points file</tooltipstring>
    <text>Open</text>
    <variable>handles.model.sfincs.domain.input.obsfile</variable>
    <extension>*.obs</extension>
    <showfilename>no</showfilename>
    <selectiontext>Select observation points file</selectiontext>
    <onchange>ddb_sfincs_observation_points</onchange>
    <option1>loadobservationpoints</option1>
  </element>
  <element>
    <style>pushsavefile</style>
    <position>300 20 70 20</position>
    <tooltipstring>Save observation points file</tooltipstring>
    <text>Save</text>
    <variable>handles.model.sfincs.domain.input.obsfile</variable>
    <showfilename>no</showfilename>
    <extension>*.obs</extension>
    <selectiontext>Select observation points file</selectiontext>
    <onchange>ddb_sfincs_observation_points</onchange>
    <option1>saveobservationpoints</option1>
  </element>

  <element>
    <style>panel</style>
    <text>Cross Sections (not implemented yet)</text>
    <position>390 10 340 160</position>
  </element>
  <element>
    <style>listbox</style>
    <position>400 20 160 130</position>
    <tooltipstring>Select cross section</tooltipstring>
    <textposition>above-center</textposition>
    <variable>handles.model.sfincs.domain.activecrosssection</variable>
    <type>integer</type>
    <onchange>ddb_sfincs_observation_points</onchange>
    <option1>selectobservationpointfromlist</option1>
    <listtext>
      <variable>handles.model.sfincs.domain.crosssectionnames</variable>
    </listtext>
    <enable>0</enable>
  </element>
  <element>
    <style>edit</style>
    <position>600 130 120 20</position>
    <text>Name</text>
    <onchange>ddb_sfincs_observation_points</onchange>
    <option1>editobservationpoint</option1>
    <tooltipstring>Edit observation point name</tooltipstring>
    <variable>handles.model.sfincs.domain.observationpoints(handles.model.sfincs.domain.activeobservationpoint).name</variable>
    <type>string</type>
    <dependency>
      <action>enable</action>
      <checkfor>all</checkfor>
      <check>
        <variable>handles.model.sfincs.domain.nrobservationpoints</variable>
        <value>999</value>
        <operator>gt</operator>
      </check>
    </dependency>
    <enable>0</enable>
  </element>
  <element>
    <style>edit</style>
    <position>600 105 50 20</position>
    <text>X</text>
    <onchange>ddb_sfincs_observation_points</onchange>
    <option1>editobservationpoint</option1>
    <tooltipstring>Edit observation point x coordinate</tooltipstring>
    <variable>handles.model.sfincs.domain.observationpoints(handles.model.sfincs.domain.activeobservationpoint).x</variable>
    <type>real</type>
    <dependency>
      <action>enable</action>
      <checkfor>all</checkfor>
      <check>
        <variable>handles.model.sfincs.domain.nrobservationpoints</variable>
        <value>999</value>
        <operator>gt</operator>
      </check>
    </dependency>
    <enable>0</enable>
  </element>
  <element>
    <style>edit</style>
    <position>670 105 50 20</position>
    <text>Y</text>
    <onchange>ddb_sfincs_observation_points</onchange>
    <option1>editobservationpoint</option1>
    <variable>handles.model.sfincs.domain.observationpoints(handles.model.sfincs.domain.activeobservationpoint).y</variable>
    <type>real</type>
    <tooltipstring>Edit observation point y coordinate</tooltipstring>
    <dependency>
      <action>enable</action>
      <checkfor>all</checkfor>
      <check>
        <variable>handles.model.sfincs.domain.nrobservationpoints</variable>
        <value>999</value>
        <operator>gt</operator>
      </check>
    </dependency>
    <enable>0</enable>
  </element>
  <element>
    <style>pushbutton</style>
    <position>570 65 70 20</position>
    <text>Add</text>
    <tooltipstring>Add observation point</tooltipstring>
    <callback>ddb_sfincs_observation_points</callback>
    <option1>addobservationpoint</option1>
    <enable>0</enable>
  </element>
  <element>
    <style>pushbutton</style>
    <position>650 65 70 20</position>
    <text>Delete</text>
    <tooltipstring>Delete observation point</tooltipstring>
    <callback>ddb_sfincs_observation_points</callback>
    <option1>deleteobservationpoint</option1>
    <enable>0</enable>
  </element>
  <element>
    <style>pushselectfile</style>
    <position>570 20 70 20</position>
    <tooltipstring>Open observation points file</tooltipstring>
    <text>Open</text>
    <variable>handles.model.sfincs.domain.input.obsfile</variable>
    <extension>*.obs</extension>
    <showfilename>no</showfilename>
    <selectiontext>Select observation points file</selectiontext>
    <onchange>ddb_sfincs_observation_points</onchange>
    <option1>loadobservationpoints</option1>
    <enable>0</enable>
  </element>
  <element>
    <style>pushsavefile</style>
    <position>650 20 70 20</position>
    <tooltipstring>Save observation points file</tooltipstring>
    <text>Save</text>
    <variable>handles.model.sfincs.domain.input.obsfile</variable>
    <showfilename>no</showfilename>
    <extension>*.obs</extension>
    <selectiontext>Select observation points file</selectiontext>
    <onchange>ddb_sfincs_observation_points</onchange>
    <option1>saveobservationpoints</option1>
    <enable>0</enable>
  </element>


</root>
