<?xml version="1.0"?>
<root>
  <element>
    <tag>listobservationpoints</tag>
    <style>listbox</style>
    <position>10 10 150 105</position>
    <tooltipstring>Select observation point</tooltipstring>
    <text>Observation Points</text>
    <textposition>above-center</textposition>
    <variable>handles.Model(md).Input(ad).activeObservationPoint</variable>
    <type>integer</type>
    <onchange>ddb_Delft3DFLOW_observationPoints</onchange>
    <option1>selectfromlist</option1>
    <listtext>
      <variable>handles.Model(md).Input(ad).observationPointNames</variable>
    </listtext>
  </element>
  <element>
    <tag>panelobservationpoints</tag>
    <style>panel</style>
    <position>170 10 170 70</position>
  </element>
  <element>
    <tag>editobsname</tag>
    <style>edit</style>
    <position>210 50 120 20</position>
    <text>Name</text>
    <onchange>ddb_Delft3DFLOW_observationPoints</onchange>
    <option1>edit</option1>
    <tooltipstring>Edit observation point name</tooltipstring>
    <variable>handles.Model(md).Input(ad).observationPoints(handles.Model(md).Input(ad).activeObservationPoint).name</variable>
    <type>string</type>
    <dependency>
      <action>enable</action>
      <tags>
        <tag>pushdeleteobservationpoint</tag>
        <tag>pushaddobservationpoint</tag>
        <tag>pushopenobservationpointsfile</tag>
      </tags>
      <checkfor>all</checkfor>
      <check>
        <variable>handles.Model(md).Input(ad).nrObservationPoints</variable>
        <value>0</value>
        <operator>gt</operator>
      </check>
    </dependency>
    <dependency>
      <action>update</action>
    </dependency>
  </element>
  <element>
    <tag>editobsm</tag>
    <style>edit</style>
    <position>210 25 50 20</position>
    <text>M</text>
    <onchange>ddb_Delft3DFLOW_observationPoints</onchange>
    <option1>edit</option1>
    <tooltipstring>Edit observation point index M</tooltipstring>
    <variable>handles.Model(md).Input(ad).observationPoints(handles.Model(md).Input(ad).activeObservationPoint).M</variable>
    <type>integer</type>
    <dependency>
      <action>enable</action>
      <tags>
        <tag>pushdeleteobservationpoint</tag>
        <tag>pushaddobservationpoint</tag>
        <tag>pushopenobservationpointsfile</tag>
      </tags>
      <checkfor>all</checkfor>
      <check>
        <variable>handles.Model(md).Input(ad).nrObservationPoints</variable>
        <value>0</value>
        <operator>gt</operator>
      </check>
    </dependency>
    <dependency>
      <action>update</action>
    </dependency>
  </element>
  <element>
    <tag>editobsn</tag>
    <style>edit</style>
    <position>280 25 50 20</position>
    <text>N</text>
    <onchange>ddb_Delft3DFLOW_observationPoints</onchange>
    <option1>edit</option1>
    <variable>handles.Model(md).Input(ad).observationPoints(handles.Model(md).Input(ad).activeObservationPoint).N</variable>
    <type>integer</type>
    <tooltipstring>Edit observation point index N</tooltipstring>
    <dependency>
      <action>enable</action>
      <tags>
        <tag>pushdeleteobservationpoint</tag>
        <tag>pushaddobservationpoint</tag>
        <tag>pushopenobservationpointsfile</tag>
      </tags>
      <checkfor>all</checkfor>
      <check>
        <variable>handles.Model(md).Input(ad).nrObservationPoints</variable>
        <value>0</value>
        <operator>gt</operator>
      </check>
    </dependency>
    <dependency>
      <action>update</action>
    </dependency>
  </element>
  <element>
    <tag>toggleaddobservationpoint</tag>
    <style>togglebutton</style>
    <position>360 85 70 20</position>
    <text>Add</text>
    <tooltipstring>Add observation point</tooltipstring>
    <onchange>ddb_Delft3DFLOW_observationPoints</onchange>
    <option1>add</option1>
    <variable>handles.Model(md).Input(ad).addObservationPoint</variable>
  </element>
  <element>
    <tag>pushdeleteobservationpoint</tag>
    <style>pushbutton</style>
    <position>360 60 70 20</position>
    <text>Delete</text>
    <tooltipstring>Delete observation point</tooltipstring>
    <callback>ddb_Delft3DFLOW_observationPoints</callback>
    <option1>delete</option1>
  </element>
  <element>
    <tag>toggleselectobservationpoint</tag>
    <style>togglebutton</style>
    <position>360 35 70 20</position>
    <text>Select</text>
    <tooltipstring>Select observation point</tooltipstring>
    <onchange>ddb_Delft3DFLOW_observationPoints</onchange>
    <option1>select</option1>
    <variable>handles.Model(md).Input(ad).selectObservationPoint</variable>
  </element>
  <element>
    <tag>togglechangeobservationpoint</tag>
    <style>togglebutton</style>
    <position>360 10 70 20</position>
    <text>Change</text>
    <tooltipstring>Change observation point</tooltipstring>
    <onchange>ddb_Delft3DFLOW_observationPoints</onchange>
    <option1>change</option1>
    <variable>handles.Model(md).Input(ad).changeObservationPoint</variable>
  </element>
  <element>
    <tag>pushopenobservationpoints</tag>
    <style>pushselectfile</style>
    <position>450 60 70 20</position>
    <tooltipstring>Open observation points file</tooltipstring>
    <text>Open</text>
    <variable>handles.Model(md).Input(ad).obsFile</variable>
    <extension>*.obs</extension>
    <selectiontext>Select observation points File</selectiontext>
    <onchange>ddb_Delft3DFLOW_observationPoints</onchange>
    <option1>openfile</option1>
    <dependency>
      <action>update</action>
    </dependency>
  </element>
  <element>
    <tag>pushsaveobservationpoints</tag>
    <style>pushsavefile</style>
    <position>450 35 70 20</position>
    <tooltipstring>Save observation points file</tooltipstring>
    <text>Save</text>
    <variable>handles.Model(md).Input(ad).obsFile</variable>
    <showfilename>no</showfilename>
    <extension>*.obs</extension>
    <selectiontext>Select observation points File</selectiontext>
    <onchange>ddb_Delft3DFLOW_observationPoints</onchange>
    <option1>savefile</option1>
  </element>
</root>
