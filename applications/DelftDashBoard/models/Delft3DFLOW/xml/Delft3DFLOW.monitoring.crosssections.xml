<?xml version="1.0"?>
<root>
  <element>
    <tag>listcrosssections</tag>
    <style>listbox</style>
    <position>10 10 150 105</position>
    <tooltipstring>Select cross section</tooltipstring>
    <text>Cross Sections</text>
    <textposition>above-center</textposition>
    <variable>handles.Model(md).Input(ad).activeCrossSection</variable>
    <type>integer</type>
    <onchange>ddb_Delft3DFLOW_crossSections</onchange>
    <option1>selectfromlist</option1>
    <listtext>
      <variable>handles.Model(md).Input(ad).crossSectionNames</variable>
    </listtext>
  </element>
  <element>
    <tag>panelcrosssections</tag>
    <style>panel</style>
    <position>170 10 170 100</position>
  </element>
  <element>
    <tag>editcrsm1</tag>
    <style>edit</style>
    <position>200 80 50 20</position>
    <text>M1</text>
    <onchange>ddb_Delft3DFLOW_crossSections</onchange>
    <option1>edit</option1>
    <tooltipstring>Edit cross section index M1</tooltipstring>
    <variable>handles.Model(md).Input(ad).crossSections(handles.Model(md).Input(ad).activeCrossSection).M1</variable>
    <type>integer</type>
    <dependency>
      <action>enable</action>
      <checkfor>all</checkfor>
      <check>
        <variable>handles.Model(md).Input(ad).nrCrossSections</variable>
        <value>0</value>
        <operator>gt</operator>
      </check>
    </dependency>
    <dependency>
      <action>update</action>
    </dependency>
  </element>
  <element>
    <tag>editcrsn1</tag>
    <style>edit</style>
    <position>280 80 50 20</position>
    <text>N1</text>
    <onchange>ddb_Delft3DFLOW_crossSections</onchange>
    <option1>edit</option1>
    <variable>handles.Model(md).Input(ad).crossSections(handles.Model(md).Input(ad).activeCrossSection).N1</variable>
    <type>integer</type>
    <tooltipstring>Edit cross section index N1</tooltipstring>
    <dependency>
      <action>enable</action>
      <checkfor>all</checkfor>
      <check>
        <variable>handles.Model(md).Input(ad).nrCrossSections</variable>
        <value>0</value>
        <operator>gt</operator>
      </check>
    </dependency>
    <dependency>
      <action>update</action>
    </dependency>
  </element>
  <element>
    <tag>editcrsm2</tag>
    <style>edit</style>
    <position>200 50 50 20</position>
    <text>M2</text>
    <onchange>ddb_Delft3DFLOW_crossSections</onchange>
    <option1>edit</option1>
    <variable>handles.Model(md).Input(ad).crossSections(handles.Model(md).Input(ad).activeCrossSection).M2</variable>
    <type>integer</type>
    <tooltipstring>Edit cross section index M2</tooltipstring>
    <dependency>
      <action>enable</action>
      <checkfor>all</checkfor>
      <check>
        <variable>handles.Model(md).Input(ad).nrCrossSections</variable>
        <value>0</value>
        <operator>gt</operator>
      </check>
    </dependency>
    <dependency>
      <action>update</action>
    </dependency>
  </element>
  <element>
    <tag>editcrsn2</tag>
    <style>edit</style>
    <position>280 50 50 20</position>
    <text>N2</text>
    <onchange>ddb_Delft3DFLOW_crossSections</onchange>
    <option1>edit</option1>
    <variable>handles.Model(md).Input(ad).crossSections(handles.Model(md).Input(ad).activeCrossSection).N2</variable>
    <type>integer</type>
    <tooltipstring>Edit cross section index N2</tooltipstring>
    <dependency>
      <action>enable</action>
      <checkfor>all</checkfor>
      <check>
        <variable>handles.Model(md).Input(ad).nrCrossSections</variable>
        <value>0</value>
        <operator>gt</operator>
      </check>
    </dependency>
    <dependency>
      <action>update</action>
    </dependency>
  </element>
  <element>
    <tag>editname</tag>
    <style>edit</style>
    <position>210 20 120 20</position>
    <text>Name</text>
    <onchange>ddb_Delft3DFLOW_crossSections</onchange>
    <option1>edit</option1>
    <tooltipstring>Edit cross section name</tooltipstring>
    <variable>handles.Model(md).Input(ad).crossSections(handles.Model(md).Input(ad).activeCrossSection).name</variable>
    <type>string</type>
    <dependency>
      <action>enable</action>
      <checkfor>all</checkfor>
      <check>
        <variable>handles.Model(md).Input(ad).nrCrossSections</variable>
        <value>0</value>
        <operator>gt</operator>
      </check>
    </dependency>
    <dependency>
      <action>update</action>
    </dependency>
  </element>
  <element>
    <tag>toggleaddcrosssection</tag>
    <style>togglebutton</style>
    <position>360 85 70 20</position>
    <text>Add</text>
    <tooltipstring>Add cross section</tooltipstring>
    <onchange>ddb_Delft3DFLOW_crossSections</onchange>
    <option1>add</option1>
    <variable>handles.Model(md).Input(ad).addCrossSection</variable>
  </element>
  <element>
    <tag>pushdeletecrosssection</tag>
    <style>pushbutton</style>
    <position>360 60 70 20</position>
    <text>Delete</text>
    <tooltipstring>Delete cross section</tooltipstring>
    <callback>ddb_Delft3DFLOW_crossSections</callback>
    <option1>delete</option1>
  </element>
  <element>
    <tag>toggleselectcrosssection</tag>
    <style>togglebutton</style>
    <position>360 35 70 20</position>
    <text>Select</text>
    <tooltipstring>Select cross section</tooltipstring>
    <onchange>ddb_Delft3DFLOW_crossSections</onchange>
    <option1>select</option1>
    <variable>handles.Model(md).Input(ad).selectCrossSection</variable>
  </element>
  <element>
    <tag>togglechangecrosssection</tag>
    <style>togglebutton</style>
    <position>360 10 70 20</position>
    <text>Change</text>
    <tooltipstring>Change cross section</tooltipstring>
    <onchange>ddb_Delft3DFLOW_crossSections</onchange>
    <option1>change</option1>
    <variable>handles.Model(md).Input(ad).changeCrossSection</variable>
  </element>
  <element>
    <tag>pushopencrosssections</tag>
    <style>pushselectfile</style>
    <position>450 60 70 20</position>
    <tooltipstring>Open cross sections file</tooltipstring>
    <text>Open</text>
    <variable>handles.Model(md).Input(ad).crsFile</variable>
    <extension>*.crs</extension>
    <selectiontext>Select cross sections file</selectiontext>
    <onchange>ddb_Delft3DFLOW_crossSections</onchange>
    <option1>openfile</option1>
    <dependency>
      <action>update</action>
    </dependency>
  </element>
  <element>
    <tag>pushsavecrosssections</tag>
    <style>pushsavefile</style>
    <position>450 35 70 20</position>
    <tooltipstring>Save cross sections file</tooltipstring>
    <text>Save</text>
    <variable>handles.Model(md).Input(ad).crsFile</variable>
    <showfilename>no</showfilename>
    <extension>*.crs</extension>
    <selectiontext>Select cross sections file</selectiontext>
    <onchange>ddb_Delft3DFLOW_crossSections</onchange>
    <option1>savefile</option1>
  </element>
</root>
